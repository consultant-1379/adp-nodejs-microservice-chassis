{
  "editor.tabSize": 2,
  "editor.formatOnType": true,
  "editor.formatOnSave": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": ["source.fixAll.format", "source.fixAll.eslint"],
  "files.associations": {
    "Jenkinsfile*": "groovy"
  },
  "markdownlint.ignore": ["bob", "**/node_modules/**"],
  "search.exclude": {
    "bob/": true
  },
  "files.trimTrailingWhitespace": true,
  "debug.javascript.autoAttachFilter": "smart",
  "debug.onTaskErrors": "debugAnyway",
  "mochaExplorer.env": { "NODE_ENV": "test" },
  "mochaExplorer.files": "backend/test/**/*.js",
  "mochaExplorer.ignore": "backend/test/reports/**/*.js",
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "vale.core.useCLI": true,
  "[groovy]": {
    "editor.defaultFormatter": "NicolasVuillamy.vscode-groovy-lint"
  }
}
